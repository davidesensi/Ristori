<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:tabbedbottm="clr-namespace:Ristori.Views"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            xmlns:helpers="clr-namespace:Ristori.Helpers"
       
       xmlns:views="clr-namespace:Ristori.Views" x:DataType="tabbedbottm:ShellView"
       x:Class="Ristori.Views.ShellView"
       NavBarIsVisible="False"
       Shell.TabBarBackgroundColor="White"
       Shell.TabBarUnselectedColor="#931A25"
       Shell.TabBarTitleColor="#F44336">
    <!--Pages can be added as references or inline-->


    
    <TabBar >
        
        <Tab Title="Home" 
             Icon="{FontImage FontFamily=FontAwesome, Glyph={x:Static helpers:IconFont.Home}}">
            <ShellContent 
                ContentTemplate="{DataTemplate views:ProductsView}"  />
        </Tab>

        <Tab Title="Carrello" 
             Icon="{FontImage FontFamily=FontAwesome, Glyph={x:Static helpers:IconFont.Cart}}">
            <ShellContent ContentTemplate="{DataTemplate views:CartView}"  />
        </Tab>

        <Tab Title="Logout" 
             Icon="{FontImage FontFamily=FontAwesome, Glyph={x:Static helpers:IconFont.LogoutVariant}}">
            <ShellContent ContentTemplate="{DataTemplate views:LogoutView}"  />
        </Tab>
    </TabBar>


</Shell>