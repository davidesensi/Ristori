<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:helpers="clr-namespace:Ristori.Helpers"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="True"
             xmlns:vm="clr-namespace:Ristori.ViewModels"
             x:Class="Ristori.Views.CartView"
             Visual="Material"
             BackgroundColor="#931A25"
             Title="Carrello">
    <ContentPage.BindingContext>
        <vm:CartViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <BoxView Grid.Row="0" />

            <Label Text="Ordine" FontSize="40" TextColor="#F5EFEF"
                   HorizontalOptions="Center" VerticalOptions="Center" />

            <ImageButton Source="{FontImage FontFamily=FontAwesome,
                         Glyph={x:Static helpers:IconFont.ArrowLeft}, Size=40, Color=#F5EFEF}"
                         Grid.Row="0" HorizontalOptions="Start" Aspect="AspectFit"
                         VerticalOptions="Start" Margin="10,30" Clicked="ImageButton_Clicked" BackgroundColor="Transparent"/>
            <pancake:PancakeView Grid.Row="1"
                                 CornerRadius="60,60,0,0">
                <ListView x:Name="ListViewCartItems" Margin="20"
                          SeparatorVisibility="None"
                          ItemsSource="{Binding CartItems}"
                          Header="" HasUnevenRows="True">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Label Text="ID: " Grid.Column="0" FontSize="Subtitle"
                                       TextColor="#F5EFEF" />
                                <Label Text="Nome: " Grid.Column="1" FontSize="Subtitle"
                                       TextColor="#F5EFEF" />
                                <Label Text="Prezzo: " Grid.Column="2" FontSize="Subtitle"
                                       TextColor="#F5EFEF" />
                                <Label Text="Quantità: " Grid.Column="3" FontSize="Subtitle"
                                       TextColor="#F5EFEF" />
                                <Label Text="Costo: " Grid.Column="4" FontSize="Subtitle"
                                       TextColor="#F5EFEF" />
                                
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding ProductID}" Grid.Column="0" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        <Label Text="{Binding ProductName}" Grid.Column="1" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        <Label Text="{Binding Price}" Grid.Column="2" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        <Label Text="{Binding Quantity}" Grid.Column="3" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        <Label Text="{Binding Cost}" Grid.Column="4" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        
                                    </Grid>
                                </ViewCell.View>
                                
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </pancake:PancakeView>

            <Label Text="Costo Totale Ordine: "
                   Grid.Row="2" HorizontalOptions="Start" FontSize="Title"
                   TextColor="#F5EFEF" />
            <Label Text="{Binding TotalCost}"
                   Grid.Row="2" HorizontalOptions="End" FontSize="Title"
                   TextColor="#F5EFEF" />

            <Button Text="Conferma" Grid.Row="3" TextColor="#F5EFEF" 
                    BackgroundColor="#F44336"
                    Command="{Binding PlaceOrdersCommand}"
                    HorizontalOptions="Center" CornerRadius="20" />
            
        </Grid>
    </ContentPage.Content>
</ContentPage>