<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:helpers="clr-namespace:Ristori.Helpers"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="True"
             xmlns:vm="clr-namespace:Ristori.ViewModels"
             x:Class="Ristori.Views.CartView"
             Visual="Material"
             BackgroundColor="#931A25"
             Title="Carrello">
    <ContentPage.BindingContext>
        <vm:CartViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <BoxView Grid.Row="0" />

            <Label Text="Ordine" FontSize="40" TextColor="#F5EFEF"
                   HorizontalOptions="Center" VerticalOptions="Center" />

            <pancake:PancakeView Grid.Row="1"
                                 CornerRadius="60,60,0,0">
                <ListView x:Name="ListViewCartItems" Margin="20"
                          SeparatorVisibility="None" IsRefreshing="True" SelectionMode="Single"
                          ItemsSource="{Binding CartItems}"
                          Header="" HasUnevenRows="True">
                    <ListView.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>

                                <Label Text="NOME" Grid.Column="0" FontSize="Subtitle"
                                       TextColor="#F5EFEF" />
                                <Label Text="PREZZO" Grid.Column="1" FontSize="Subtitle"
                                       TextColor="#F5EFEF" />
                                <Label Text="QUANTITA" Grid.Column="2" FontSize="Subtitle"
                                       TextColor="#F5EFEF" />
                                
                            </Grid>
                        </DataTemplate>
                    </ListView.HeaderTemplate>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding ProductID}" Grid.Column="0" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        <Label Text="{Binding ProductName}" Grid.Column="1" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        <Label Text="{Binding Price}" Grid.Column="2" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        <Label Text="{Binding Quantity}" Grid.Column="3" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />
                                        <Label Text="{Binding Cost}" Grid.Column="4" FontSize="Subtitle"
                                                TextColor="#F5EFEF" />

                                        <ImageButton
                                                Grid.Column="1"
                                                Margin="10,30"
                                                Aspect="AspectFit"
                                                BackgroundColor="Transparent"
                                                Command="{Binding DecrementOrderCommand}"
                                                HorizontalOptions="Start"
                                                Source="{FontImage FontFamily=FontAwesome,
                                                                   Glyph={x:Static helpers:IconFont.MinusCircleOutline},
                                                                   Size=25,
                                                                   Color=#F5EFEF}"
                                                VerticalOptions="Start" />


                                        <Entry
                                                Grid.Column="2"
                                                FontSize="20"
                                                HorizontalOptions="Center"
                                                Text="{Binding Quantity}" />

                                        <ImageButton
                                                Grid.Column="3"
                                                Margin="10,30"
                                                Aspect="AspectFit"
                                                BackgroundColor="Transparent"
                                                Command="{Binding IncrementOrderCommand}"
                                                HorizontalOptions="Start"
                                                Source="{FontImage FontFamily=FontAwesome,
                                                                   Glyph={x:Static helpers:IconFont.PlusCircleOutline},
                                                                   Size=25,
                                                                   Color=#F5EFEF}"
                                                VerticalOptions="Start" />

                                    </Grid>
                                </ViewCell.View>
                                
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </pancake:PancakeView>

            <Label Text="Totale Ordine:"
                   Grid.Row="2" HorizontalOptions="Center" FontSize="Title"
                   TextColor="#F5EFEF" />
            <Label Text="{Binding Path=TotalCost, StringFormat='{}{0:C}'}"
                   Grid.Row="2" HorizontalOptions="End" FontSize="Title"
                   TextColor="#F5EFEF" />

            <Button Text="Conferma" Grid.Row="3" TextColor="#F5EFEF" 
                    BackgroundColor="#F44336"
                    Command="{Binding PlaceOrdersCommand}"
                    HorizontalOptions="Center" CornerRadius="20" />
            
        </Grid>
    </ContentPage.Content>
</ContentPage>