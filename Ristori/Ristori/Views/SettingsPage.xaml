<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Ristori.Views.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <Button
                x:Name="ButtonCategories"
                Clicked="ButtonCategories_Clicked"
                Text="Manage Categories" />

            <Button
                x:Name="ButtonProducts"
                Clicked="ButtonProducts_Clicked"
                Text="Manage Products" />

            <Button
                x:Name="ButtonCart"
                Clicked="ButtonCart_Clicked"
                Text="Manage Cart" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>