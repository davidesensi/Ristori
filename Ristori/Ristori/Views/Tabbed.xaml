<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:tabbedbottm="clr-namespace:Ristori.Views"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="#F5EFEF"
            android:TabbedPage.BarItemColor="#931A25"
            android:TabbedPage.BarSelectedItemColor="#F44336"
            xmlns:helpers="clr-namespace:Ristori.Helpers"
            x:Class="Ristori.Views.Tabbed">
  <!--Pages can be added as references or inline-->
    <tabbedbottm:ProductsView Title="Home" IconImageSource="{FontImage FontFamily=FontAwesome,
                                           Glyph={x:Static helpers:IconFont.Home}}"></tabbedbottm:ProductsView>
    <tabbedbottm:CartView Title="Carrello" IconImageSource="{FontImage FontFamily=FontAwesome,
                                           Glyph={x:Static helpers:IconFont.Cart}}"></tabbedbottm:CartView>
    <tabbedbottm:LogoutView Title="Logout" IconImageSource="{FontImage FontFamily=FontAwesome,
                                           Glyph={x:Static helpers:IconFont.LogoutVariant}}"></tabbedbottm:LogoutView>
</TabbedPage>